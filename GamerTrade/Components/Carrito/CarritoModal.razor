@using GamerTrade.Models.DTO
@using GamerTrade.Services.Interfaces
@inject ICarritoService CarritoService
@inject IJSRuntime JS

<div class="modal @ModalClass" tabindex="-1" style="display: @(MostrarModal ? "block" : "none"); background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span class="bi bi-cart-fill me-2"></span>Mi Carrito
                </h5>
                <span class="badge bg-primary">@Carrito.Items.Count artículos</span>
                <button type="button" class="btn-close" @onclick="Cerrar"></button>
            </div>

            <div class="modal-body">
                @if (Cargando)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                }
                else if (Carrito.Items.Count == 0)
                {
                    <div class="alert alert-info text-center">
                        <p class="mb-0">
                            <span class="bi bi-info-circle me-2"></span>
                            Tu carrito está vacío
                        </p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Juego</th>
                                    <th>Precio</th>
                                    <th>Cantidad</th>
                                    <th>Subtotal</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Carrito.Items)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.Titulo</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">${item.Precio:F2}</span>
                                        </td>
                                        <td>
                                            <div class="input-group input-group-sm" style="width: 100px;">
                                                <button class="btn btn-outline-secondary"
                                                        @onclick="async () => await DisminuirCantidad(item.JuegoId)"
                                                        disabled="@(item.Cantidad <= 1)">
                                                    −
                                                </button>
                                                <input type="number" class="form-control text-center"
                                                       value="@item.Cantidad" readonly />
                                                <button class="btn btn-outline-secondary"
                                                        @onclick="async () => await AumentarCantidad(item.JuegoId)">
                                                    +
                                                </button>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="fw-bold">${(item.Precio * item.Cantidad):F2}</span>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-danger"
                                                    @onclick="async () => await EliminarItem(item.JuegoId)"
                                                    disabled="@Cargando">
                                                <span class="bi bi-trash"></span>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="card mt-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-muted">Resumen del pedido</h6>
                                    <p class="d-flex justify-content-between">
                                        <span>Subtotal:</span>
                                        <strong>${Carrito.Total:F2}</strong>
                                    </p>
                                    <p class="d-flex justify-content-between">
                                        <span>Impuesto (10%):</span>
                                        <strong>${(Carrito.Total * 0.1m):F2}</strong>
                                    </p>
                                    <hr />
                                    <h5 class="d-flex justify-content-between text-success">
                                        <span>Total:</span>
                                        <span>${(Carrito.Total * 1.1m):F2}</span>
                                    </h5>
                                </div>
                                <div class="col-md-6">
                                    <p class="text-muted">
                                        <small>Se aplicarán costos de envío según tu ubicación</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="modal-footer">
                @if (Carrito.Items.Count > 0)
                {
                    <button type="button" class="btn btn-outline-danger" @onclick="VaciarTodo" disabled="@Cargando">
                        <span class="bi bi-trash"></span> Vaciar carrito
                    </button>
                    <button type="button" class="btn btn-success" disabled="@Cargando">
                        <span class="bi bi-credit-card"></span> Proceder al pago
                    </button>
                }
                <button type="button" class="btn btn-secondary" @onclick="Cerrar" disabled="@Cargando">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool MostrarModal { get; set; }

    [Parameter]
    public EventCallback OnCerrar { get; set; }

    private CarritoDTO Carrito = new();
    private bool Cargando = false;
    private string ModalClass => MostrarModal ? "show" : "";

    protected override async Task OnParametersSetAsync()
    {
        if (MostrarModal)
        {
            await CargarCarrito();
        }
    }

    private async Task CargarCarrito()
    {
        try
        {
            Cargando = true;
            Carrito = await CarritoService.ObtenerCarritoAsync();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.error", $"Error al cargar carrito: {ex.Message}");
        }
        finally
        {
            Cargando = false;
            StateHasChanged();
        }
    }

    private async Task AumentarCantidad(int juegoId)
    {
        try
        {
            Cargando = true;
            var item = Carrito.Items.FirstOrDefault(i => i.JuegoId == juegoId);
            if (item != null)
            {
                var resultado = await CarritoService.ActualizarCantidadAsync(juegoId, item.Cantidad + 1);
                if (resultado)
                {
                    await CargarCarrito();
                }
            }
        }
        finally
        {
            Cargando = false;
        }
    }

    private async Task DisminuirCantidad(int juegoId)
    {
        try
        {
            Cargando = true;
            var item = Carrito.Items.FirstOrDefault(i => i.JuegoId == juegoId);
            if (item != null && item.Cantidad > 1)
            {
                var resultado = await CarritoService.ActualizarCantidadAsync(juegoId, item.Cantidad - 1);
                if (resultado)
                {
                    await CargarCarrito();
                }
            }
        }
        finally
        {
            Cargando = false;
        }
    }

    private async Task EliminarItem(int juegoId)
    {
        try
        {
            Cargando = true;
            var resultado = await CarritoService.RemoverItemAsync(juegoId);

            if (resultado)
            {
                await CargarCarrito();
                await JS.InvokeVoidAsync("console.log", "Juego eliminado del carrito");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "No se pudo eliminar el Juego");
            }
        }
        finally
        {
            Cargando = false;
        }
    }

    private async Task VaciarTodo()
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Estás seguro de que deseas vaciar el carrito?"))
        {
            try
            {
                Cargando = true;
                var resultado = await CarritoService.VaciarCarritoAsync();

                if (resultado)
                {
                    await CargarCarrito();
                }
            }
            finally
            {
                Cargando = false;
            }
        }
    }

    private async Task Cerrar()
    {
        await OnCerrar.InvokeAsync();
    }
}